<!DOCTYPE html>
<html>
<head>
  <title>Stephs Site</title>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= stylesheet_link_tag 'slider', media: 'all', 'data-turbolinks-track' => true %>
  <% stylesheet_link_tag 'application', 'https://fonts.googleapis.com/css?family=Raleway' %>
  <%= javascript_include_tag 'application', 'jquery-1.9.1.min.js', 'jssor.slider.debug.js', 'jssor.slider.min.js', 'jssor.slider.mini.js' 'data-turbolinks-track' => true %>
  <%= favicon_link_tag 'favicon.ico' %>
  <%= csrf_meta_tags %>
</head>
<body>
<div id="sidebar">
	<ul>
		<li class='category'><%= link_to "Stephs Site", root_path %></li>
		<li><%= link_to "Posts", root_path%></li>
		<li><%= link_to "About", about_index_path%></li>

	</ul>
	<% if !user_signed_in? %>
	<p class="sign_in"><%= link_to "User Login", new_user_session_path%></p>
	<% end %> 
</div>
<div id="main_content">
	<div id = "header">
		<p>Welcome</p>
		<% if user_signed_in? %>
		<div class="buttons">
			<button class="button"><%= link_to "Make Post", new_post_path %></button>
			<button class="button"><%= link_to "Sign Out", destroy_user_session_path, method: :delete%></button>
		</div>

		<% end %>
		<%= render 'posts/slider' %>
	</div>
	<% flash.each do |name, msg|%>
	<%= content_tag(:div, msg, class: "alert")%>
	<% end %>

	<%= yield %>

</div>


</body>
</html>
